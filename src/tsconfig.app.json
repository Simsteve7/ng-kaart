{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "module": "es2015",
    "moduleResolution": "node",
    "types": [
      "node"
    ],
    "target": "es6",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
    "stripInternal": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "strictNullChecks": false
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ]
}
